<style lang="scss">
  @use '../styles/colors.scss';
  @use '../styles/breakpoints.scss';
  @use '../styles/section.scss';

  section {
    @include section.wrapper;
    overflow: hidden;
  }

  /*Header section Style*/

  .headerTitle {
    @include section.title;
  }

  .headerContainer {
    display: flex;
    margin-bottom: 5rem;
    text-align: center;
    flex-direction: column;
    width: 100%;
  }

  .headerText {
    margin-left: auto;
    margin-right: auto;
    color: colors.$textParagraph;
    font-size: 1rem;
    line-height: 1.5rem;
    line-height: 1.625;

    @include breakpoints.size(laptop) {
      width: 66.666667%;
    }
  }

  .headerBtnContainer {
    display: flex;
    overflow: hidden;
    margin-left: auto;
    margin-right: auto;
    margin-top: 1.5rem;
    border-radius: 0.25rem;
    border-width: 2px;
    border-color: colors.$highlight;
  }

  .headerBtn-blue {
    padding: 0.4rem 1rem;
    background-color: colors.$highlight;
    color: colors.$baseWhite;
    filter: brightness(120%);
  }

  .headerBtn-white {
    padding: 0.4rem 1rem;
  }

  /*Price section Style*/

  .pricingContainer {
    display: flex;
    margin: -1rem;
    flex-wrap: wrap;
  }

  .indivPricing {
    padding: 1rem;
    width: 100%;

    @include breakpoints.size(tablet) {
      width: 50%;
    }

    @include breakpoints.size(laptop) {
      width: 25%;
    }
  }

  .indivPricing-centering {
    display: flex;
    overflow: hidden;
    position: relative;
    padding: 1.5rem;
    flex-direction: column;
    height: 100%;
    border-radius: 0.5rem;
    border-width: 2px;
    border-color: colors.$lightGray;
  }

  .indivPricingPopular-centering {
    border-color: #6366f1;
  }

  .pricingName {
    margin-bottom: 0.25rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 500;
    letter-spacing: 0.1em;
  }

  .pricingPrice {
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    color: colors.$baseBlack;
    font-size: 3rem;
    line-height: 1;
    line-height: 1;
    border-bottom-width: 1px;
    border-color: colors.$lightGray;
  }

  .pricingPricePayTag {
    margin-left: 0.25rem;
    color: #6b7280;
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 400;
  }

  .pricingFeatureContainer {
    display: flex;
    margin-bottom: 0.5rem;
    color: colors.$baseGray;
    align-items: center;
  }

  .pricingIconContainer {
    display: inline-flex;
    margin-right: 0.5rem;
    background-color: colors.$mediumGray;
    color: colors.$baseWhite;
    flex-shrink: 0;
    justify-content: center;
    align-items: center;
    width: 1rem;
    height: 1rem;
    border-radius: 9999px;
  }

  .pricingIcon {
    width: 0.75rem;
    height: 0.75rem;
  }

  .pricingBtn {
    display: flex;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    padding-left: 1rem;
    padding-right: 1rem;
    margin-top: auto;
    background-color: #9ca3af;
    color: #ffffff;
    align-items: center;
    width: 100%;
    border-radius: 0.25rem;
    border-width: 0;
    transition: all 0.2s ease-in-out;

    &:hover {
      background-color: #6b7280;
      transition: all 0.2s ease-in-out;
    }
  }

  .pricingPopularBtn {
    background-color: #6366f1;
    &:hover {
      background-color: #4f46e5;
      transition: all 0.2s ease-in-out;
    }
  }

  .pricingDisclaimer {
    margin-top: 0.75rem;
    color: #6b7280;
    font-size: 0.75rem;
    line-height: 1rem;
  }

  .popularTag {
    position: absolute;
    top: 0;
    right: 0;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    background-color: #6366f1;
    color: #ffffff;
    font-size: 0.75rem;
    line-height: 1rem;
    letter-spacing: 0.1em;
    border-bottom-left-radius: 0.25rem;
  }
</style>
