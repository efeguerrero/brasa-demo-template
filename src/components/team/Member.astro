---
const { name, role, description, img, socials } = Astro.props;

//Icon Component to import svg icons from a folder
import Icon from '/src/components/utils/Icon.astro';

//Socials data imported from a json file
import socials from '/src/data/socials.json';
---

<div class="container">
  <img alt="team member image" class="image" src={img} />
  <div class="infoContainer">
    <h2 class="name">{name}</h2>
    <h3 class="role">{role}</h3>
    <p class="description">
      {description}
    </p>
    <span class="socialContainer">
      {
        socials.map((social) => {
          return (
            <a class="socialLink" target="_blank">
              <Icon icon={social.name} folder="socials" />
            </a>
          );
        })
      }
    </span>
  </div>
</div>

<style lang="scss">
  @use '../../styles/colors.scss';
  @use '../../styles/breakpoints.scss';

  .container {
    display: flex;
    padding: 1rem;
    text-align: center;
    flex-direction: column;
    align-items: center;
    height: 100%;

    @include breakpoints.size(tablet) {
      width: 50%;
    }

    @include breakpoints.size(laptop) {
      width: 25%;
    }
  }

  .image {
    width: 19rem;
    height: 19rem;
    object-fit: cover;
    object-position: center;
    margin-bottom: 1rem;
    height: 14rem;
    border-radius: 0.5rem;
  }

  .infoContainer {
    width: 100%;
  }

  .name {
    color: colors.$textTitle;
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 500;
  }

  .role {
    color: colors.$textParagraph;
    margin-bottom: 0.75rem;
  }

  .description {
    margin-bottom: 1rem;
  }

  .socialContainer {
    display: inline-flex;
    margin-top: 1rem;
    justify-content: center;
    gap: 0.7rem;

    @include breakpoints.size(phoneL) {
      margin-top: 0;
      margin-left: auto;
      justify-content: flex-start;
    }
  }
  .socialLink {
    color: colors.$baseGray;
    cursor: pointer;
  }
</style>
