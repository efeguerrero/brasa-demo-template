---
const { name, title, img, text } = Astro.props;
---

<div class="client">
  <p>
    "{text}"
  </p>
  <div class="infoContainer">
    <img src={img} alt="Client Image" class="avatar" />
    <div>
      <p class="name">{name}</p>
      <p class="title">{title}</p>
    </div>
  </div>
</div>

<style lang="scss">
  @use '../../styles/colors.scss';
  @use '../../styles/breakpoints.scss';

  .client {
    padding: 1.5rem;
    border-radius: 0.25rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .infoContainer {
    display: flex;
    margin: 1rem 0;
    align-items: center;
    gap: 1rem;
  }

  .avatar {
    background-position: center;
    background-size: cover;
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
  }
  .name {
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 600;
  }

  .title {
    font-size: 0.875rem;
    line-height: 1.25rem;
  }
</style>
