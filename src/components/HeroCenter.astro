---
const heroImg = '/assets/images/heroImage.svg';
---

<section class="heroWrapper">
  <div class="heroContainer bodywrapper">
    <div class="heroInfoContainer">
      <h1 class="heroTitle">
        Before they sold out<br class="hidden lg:inline-block" />
        <span class="heroTitleStrong">readymade gluten</span>
      </h1>
      <p class="heroText">
        Copper mug try-hard pitchfork pour-over freegan heirloom neutra air
        plant cold-pressed tacos poke beard tote bag. Heirloom echo park mlkshk
        tote bag selvage hot chicken authentic tumeric truffaut hexagon try-hard
        chambray.
      </p>
      <a href="#contact"
        ><button class="stdButton heroButton">Contact us!</button></a
      >
    </div>
  </div>
</section>

<style>
  @import '../styles/variables.css';

  /*Overwrite sectionWrapper padding-top for Hero*/
  .heroWrapper {
    /*15vh is the navbar fixed height in navbar.module.css*/
    min-height: 85vh;
    padding-top: 3rem;
    background-image: url('/assets/images/heroBackground.svg');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 0 12rem;
  }

  .heroContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .heroInfoContainer {
    display: flex;
    flex-direction: column;
    margin-bottom: 4rem;
    align-items: center;
  }

  .heroTitle {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--textTitle);
    font-size: 3rem;
    line-height: 3rem;
    font-weight: 800;
    letter-spacing: 2px;
  }

  .heroTitleStrong {
    color: var(--highlight);
  }

  .heroText {
    margin-bottom: 3rem;
    line-height: 1.625;
    text-align: center;
  }

  /*Basic style for Btns comes from global sheet. Only set color for background, font and hover*/

  .heroButton {
    background-color: var(--highlight);
    color: var(--baseWhite);
  }

  .imgContainer {
    width: 83%;
    /* width: 100vw; */
  }

  .img {
    object-fit: cover;
    object-position: center;
    /* border-radius: 0.25rem; */
  }

  /*Media Queries*/

  @media (min-width: 768px) {
    .heroWrapper {
      padding-top: 6rem;
      background-position: 0 -2rem;
    }

    .heroContainer {
      flex-direction: row;
    }

    .heroInfoContainer {
      margin-bottom: 0;
      text-align: left;
      align-items: center;
      width: 50%;
    }

    .heroTitle {
      font-size: 3.5rem;
      line-height: 3.5rem;
    }

    .heroText {
      font-size: 1.3rem;
    }
  }
  @media (min-width: 1024px) {
    .heroInfoContainer {
      padding-right: 6rem;
    }
  }
</style>

