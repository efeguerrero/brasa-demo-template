<section class="heroWrapper">
  <div class="heroContainer">
    <div class="heroInfoContainer">
      <h1 class="heroTitle">
        Before they sold out readymade <br class="hidden lg:inline-block" />
        <span class="heroTitleStrong">readymade gluten</span>
      </h1>
      <p class="mb-8 leading-relaxed text-left">
        Copper mug try-hard pitchfork pour-over freegan heirloom neutra air
        plant cold-pressed tacos poke beard tote bag. Heirloom echo park mlkshk
        tote bag selvage hot chicken authentic tumeric truffaut hexagon try-hard
        chambray.
      </p>
      <div class="flex justify-center">
        <a href="#contact"
          ><button
            class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"
            >Contact us!</button
          ></a
        >
      </div>
    </div>
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
      <img
        class="object-cover object-center rounded"
        alt="hero"
        src="https://dummyimage.com/720x600"
      />
    </div>
  </div>
</section>

<style>
  @import '../styles/variables.css';

  /*Overwrite sectionWrapper padding-top for Hero*/
  .heroWrapper {
    /*15vh is the navbar fixed height in navbar.module.css*/
    min-height: 85vh;
    padding-top: 3rem;
  }

  .heroContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .heroInfoContainer {
    display: flex;
    flex-direction: column;
    margin-bottom: 4rem;
    text-align: center;
    align-items: center;
  }

  .heroTitle {
    margin-bottom: 1rem;
    color: var(--textTitle);
    font-size: 2.5rem;
    line-height: 2.5rem;
    font-weight: 800;
    letter-spacing: 2px;
    text-align: left;
  }

  .heroTitleStrong {
    color: var(--highlight);
  }

  /*Media Queries*/

  @media (min-width: 768px) {
    .heroWrapper {
      padding-top: 6rem;
    }

    .heroContainer {
      flex-direction: row;
    }

    .heroInfoContainer {
      padding-right: 4rem;
      margin-bottom: 0;
      text-align: left;
      align-items: flex-start;
      width: 50%;
    }

    .heroTitle {
      font-size: 3rem;
      line-height: 3.5rem;
    }
  }
  @media (min-width: 1024px) {
    .heroInfoContainer {
      padding-right: 6rem;
      flex-grow: 1;
    }
  }
</style>

